<% include ../partials/header %>

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Lone Star Camping</h1>
            <p>The best campgrounds Texas has to offer, collected in one easy to access platform!</p>
            <p>
                <a class="btn btn-primary btn-lrg" href="/campgrounds/new">Add a New Campground!</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Campground Collection</h3>
        </div>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">    
        <% campgrounds.forEach (function(campground) { %>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="thumbnail">
                    <img class="img-fluid" alt="Responsive image" src="<%=campground.image%>"></img>
                    <div class="caption">
                        <h4><%=campground.name %></h4>
                    </div>
                    <p>
                        <a href ="/campgrounds/<%= campground._id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
        
        
    </div>
    

<% include ../partials/footer %>